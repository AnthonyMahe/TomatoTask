{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "TomatoTask",
  "version": "1.0.8",
  "identifier": "com.tomatotask.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "TomatoTask",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "visible": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; font-src 'self' data:; img-src 'self' data: asset: https://asset.localhost; script-src 'self'"
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "tooltip": "TomatoTask - Pomodoro Timer"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/tomatoIcon128x128.png",
      "icons/tomatoIcon142x142.png",
      "icons/tomatoIcon150x150.png",
      "icons/tomatoIcon.png",
      "icons/icon.icns",
      "icons/tomatoIcon.ico"
    ]
  }
}
